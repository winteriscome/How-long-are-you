{
  "manifest_version": 2,
  "name": "How long are you",
  "version": "1.0",
  "description": "你有多长",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "background": {
    "scripts": ["background.js","js/jquery-3.4.1.min.js"],
    "persistent": false
  },
  "permissions": [    
    "http://*/*",
    "https://*/*",
    "storage",
    //"webRequest",
    "tabs",
    "cookies",
    "clipboardRead",
    "clipboardWrite"],
  "page_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "toggle-tags": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "MacCtrl+S"
      },
      "description": "你有多长"
    }
  },
  "content_scripts": [
    {
        "matches": ["*://*/*", "file://*"],
        "js": [ "content.js","js/jquery-3.4.1.min.js"]
    }
]
}